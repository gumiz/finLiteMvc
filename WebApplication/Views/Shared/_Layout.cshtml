<!DOCTYPE html>
<html>
<head>
	<base href="/">
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>FinLite</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Styles.Render("~/Content/template")
</head>

<body ng-app="finLiteApp" ng-controller="MainCtrl as main" ng-cloak data-baseurl="@Url.Content("~/")">
	<div growl></div>
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
						aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("FinLite", "Index", "Documents", null, new { @class = "navbar-brand", target = "_self" })
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li ng-class="main.commands.getClass('/Accounts')"><a ng-href="{{main.commands.getUrlAccounts()}}" target = "_self">Konta</a></li>
					<li ng-class="main.commands.getClass('/OpeningBalance')"><a ng-href="{{main.commands.getUrlOpenings()}}" target = "_self">Bilans otwarcia</a></li>
					<li ng-class="main.commands.getClass('/Documents')"><a ng-href="{{main.commands.getUrlDocuments()}}" target = "_self">Dokumenty</a></li>
					<li ng-class="main.commands.getClass('/Reports')"><a ng-href="{{main.commands.getUrlReports()}}" target = "_self">Raporty</a></li>
					@*					<li><button style="margin-top: 16px; margin-left: 50px"ng-click="main.commands.initData()">Reset DataBase</button></li>*@
					<li>
						<div class="dropdown" style="margin-top: 8px;">
							<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
								Wydruki
								<span class="caret"></span>
							</button>
							<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
								<li ng-class="main.commands.getClass('/Creators')"><a ng-href="{{main.commands.getUrlCreatorsProfitLoss()}}" target="_self">Rachunek wyników</a></li>
								<li role="separator" class="divider"></li>
							</ul>
						</div>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
						<div class="form-group">
							<select style="width: 100px; margin-top: 16px; margin-right: 10px" class="form-control combo" ng-options="item as item for item in main.data.allYears" ng-model="main.data.year" ng-change="main.refresh()" name="yearSelect" required></select>
						</div>
					</li>
					<li>
						<div class="form-group">
							<select style="width: 200px; margin-top: 16px" class="form-control combo" ng-options="item.ClientId as item.Name for item in main.clients" ng-model="main.data.clientId" ng-change="main.refresh()" name="clientSelect" required></select>
						</div>
					</li>
				</ul>
			</div>
			<!--/.nav-collapse -->
		</div>
	</nav>

	<div class="container">
		<div ng-animate ng-view style="margin-top: 30px">
			@RenderBody()
		</div>
	</div>
	<!-- /container -->
	<!-- Site footer -->
	<footer class="footer">
		<p>&copy; gumiz 2016</p>
	</footer>
	@Scripts.Render("~/bundles/angular")
	@Scripts.Render("~/bundles/libs")
	@Scripts.Render("~/bundles/finLite")
	@Scripts.Render("~/bundles/bootstrap")
</body>


